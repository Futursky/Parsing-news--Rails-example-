<div data-role="header" data-position="fixed">
  <h1>Listing posts</h1>
  <%= link_to 'Add', new_feed_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>
 
<div data-role="content" data-fullscreen="true">
  <ul data-role="listview">
    <% @feeds.each do |feed| %>
    <li>
      <%= link_to feed.name, :controller => "mobile", :action => "show" %>
      <%= link_to 'edit post', edit_feed_path(feed), "data-icon" => "gear" %>
    </li>
    <% end %>
  </ul>
</div>
<div data-role="footer" data-position="fixed">
      <h4>Page Footer</h4>
    </div>
